{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Arduino Monitor",
  "version": "0.1.0",
  "identifier": "com.arduino.monitor",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:5173"
  },
  "app": {
    "withGlobalTauri": false,
    "windows": [
      {
        "title": "Arduino Monitor - Desarrollo",
        "width": 1280,
        "height": 900,
        "resizable": true,
        "fullscreen": false,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": false
  }
}